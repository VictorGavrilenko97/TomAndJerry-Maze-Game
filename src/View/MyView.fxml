<?xml version="1.0" encoding="UTF-8"?>

<?import View.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<BorderPane fx:id="MainBorderPane" onMouseClicked="#mouseClicked" style="-fx-background-image: url('Images/house.jpg')" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
    <left>
        <VBox prefHeight="200.0" prefWidth="178.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane minHeight="200.0" minWidth="200.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="textField_mazeRows" text="10" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="textField_mazeColumns" text="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button minWidth="200.0" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0" text="Start Game" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.vgrow="NEVER" />
                    <Button fx:id="solveBtn" cancelButton="true" disable="true" minWidth="200.0" onAction="#solveMaze" prefHeight="25.0" prefWidth="167.0" text="Help Me Solve" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />

                </GridPane>
            <MediaView fx:id="StartingVideo" fitHeight="200.0" fitWidth="200.0" y="-100.0" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </left>
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label text="Status bar" />
            </children>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar style="-fx-background-color: lightblue">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#generateMaze" text="New" />
                            </items>
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#popUpSaveName" text="Save" />
                            </items>
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#popUpLoadName" text="Load" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#popUpProperties" text="Properties" />
                            </items>
                        </Menu>
                        <Menu fx:id="Help" mnemonicParsing="false">
                        </Menu>
                        <Menu fx:id="About" mnemonicParsing="false">
                        </Menu>
                        <Menu fx:id="Exit" mnemonicParsing="false">
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane fx:id="centerPane" maxHeight="800.0" maxWidth="800.0" minHeight="400.0" minWidth="400.0" prefHeight="560.0" prefWidth="560.0" BorderPane.alignment="CENTER">
              <children>
                  <Pane fx:id="container" maxHeight="800.0" maxWidth="800.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="560.0">
                  <MazeDisplayer fx:id="mazeDisplayer" height="400.0" imageFileNamePlayer="Resources/Images/jerry.png" imageFileNameSolveSign="Resources/Images/egg.png" imageFileNameTarget="Resources/Images/cheese.png" imageFileNameWall="Resources/Images/mousetrap.png" layoutX="14.0" onKeyPressed="#playerMovement" width="435.0" />
               <MediaView fx:id="DancingJerryWithBird" fitHeight="180.0" fitWidth="500.0" layoutX="30.0" layoutY="14.0" />
                  </Pane>
              </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </Pane>
    </center>
</BorderPane>
